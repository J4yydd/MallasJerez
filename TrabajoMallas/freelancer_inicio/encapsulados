<!-- codigo de css -->
.contenedorrr {
    position: relative;
    display: inline-block;
    width: 1000px; /* Ajusta el tama√±o seg√∫n tu necesidad */
    top: -20%; /* Lo posiciona al 50% desde la parte superior del contenedor */
    left: 0%; /* Lo posiciona al 50% desde la parte izquierda del contenedor */
    transform: translate(0%, 20%); /* Centra el elemento exactamente en el medio usando transformaci√≥n */
    padding: 0px; /* Agrega un espacio interno de 20 p√≠xeles alrededor del contenido del elemento */
 
    


    
    overflow: hidden;
}

.imagen {
    width: 1000px;  /* Ancho de la imagen */
    height: 600px; /* Alto de la imagen */
    display: block;
    transition: transform 0.3s ease;
    
}

.contenedorrr::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0); /* Inicialmente transparente */
    transition: background 1s ease;
}

.texto1 {
    position: absolute; /* Posiciona el elemento de forma absoluta dentro de su contenedor */
    top: 10%; /* Lo posiciona al 50% desde la parte superior del contenedor */
    left: 50%; /* Lo posiciona al 50% desde la parte izquierda del contenedor */
    transform: translate(-50%, -50%); /* Centra el elemento exactamente en el medio usando transformaci√≥n */
    color: white; /* Establece el color del texto en blanco */
    font-size: 20px; /* Define el tama√±o de la fuente en 20 p√≠xeles */
    font-weight: bold; /* Hace que el texto sea en negrita */
    text-align: center; /* Centra el texto dentro del elemento */
    opacity: 0; /* Inicialmente el texto es completamente transparente */
    transition: opacity 0.3s ease; /* Agrega una transici√≥n suave de 0.3s para la opacidad */
    z-index: 2; /* Asegura que el texto se muestre sobre la imagen */
}

.contenedorrr:hover .imagen {
    transform: scale(1.05); /* Peque√±o zoom para mejorar el efecto */
}

.contenedorrr:hover::after {
    background: rgba(0, 0, 0, 0.7); /* Oscurece la imagen al hacer hover */
}

.contenedorrr:hover .texto1 {
    opacity: 1;
}





.carousel {
    position: relative; /* Establece la posici√≥n de referencia para los elementos hijos con posici√≥n absoluta */
    width: 1000px; /* Establece el ancho del carrusel */
    height: 600px; /* Establece la altura del carrusel */
    overflow: hidden; /* Oculta cualquier contenido que se desborde del contenedor */
    border-radius: 10px; /* Aplica bordes redondeados de 10px */
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2); /* Aplica una sombra sutil a todo el carrusel */
}

.carousel-container {
    display: flex; /* Usa Flexbox para organizar los elementos hijos en una fila */
    width: 100%; /* El ancho de la caja de contenedor ser√° el 100% del contenedor padre */
    height: 100%; /* La altura del contenedor ocupar√° todo el alto disponible */
    transition: transform 0.5s ease-in-out; /* Agrega una transici√≥n suave al movimiento de desplazamiento (transform) */
}

.carousel-item {
    width: 100%; /* Cada √≠tem ocupar√° el 100% del ancho del contenedor */
    height: 100%; /* Cada √≠tem ocupar√° el 100% del alto del contenedor */
    object-fit: cover; /* Hace que la imagen cubra el √°rea del contenedor, recortando si es necesario para llenar el espacio */
}

.nav-btn {
    position: absolute; /* Posiciona los botones de navegaci√≥n con respecto al contenedor del carrusel */
    top: 50%; /* Los posiciona en el medio verticalmente */
    transform: translateY(-10%); /* Ajusta la posici√≥n vertical para centrar m√°s exactamente el bot√≥n */
    background: rgba(0, 0, 0, 0.3); /* Aplica un fondo oscuro semi-transparente */
    color: #fff; /* Establece el color del texto (icono del bot√≥n) como blanco */
    border: none; /* Elimina cualquier borde del bot√≥n */
    padding: 15px; /* Aplica un padding de 15px alrededor del contenido del bot√≥n */
    cursor: pointer; /* Cambia el cursor a mano cuando se pasa por encima */
    font-size: 24px; /* Establece un tama√±o de fuente grande para los iconos (como los botones de anterior y siguiente) */
    border-radius: 50%; /* Hace que el bot√≥n tenga una forma circular */
    transition: background 0.9s ease, transform 0.3s ease; /* Agrega transiciones para el fondo y la transformaci√≥n (al hacer hover) */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Agrega una sombra sutil al bot√≥n */
    z-index: 1; /* Asegura que los botones est√©n por encima de otros elementos, como las im√°genes */
}

.nav-btn:hover {
    background: rgba(0, 0, 0, 0.8); /* Al hacer hover, el fondo se oscurece */
    transform: scale(1.1); /* Aumenta el tama√±o del bot√≥n en un 10% */
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3); /* Al hacer hover, la sombra se hace m√°s grande y m√°s pronunciada */
}

#prev {
    left: 15px; /* Posiciona el bot√≥n de "anterior" a la izquierda con un margen de 15px */
    top: 125px; /* Posiciona el bot√≥n en la mitad vertical del carrusel */
}

#next {
    right: 15px; /* Posiciona el bot√≥n de "siguiente" a la derecha con un margen de 15px */
    top: 125px; /* Posiciona el bot√≥n en la mitad vertical del carrusel */
}












































